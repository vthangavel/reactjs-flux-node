{
  "name": "react-cart",
  "version": "0.0.1",
  "description": "Shopping Cart developed with React + Node in Flux framework",
  "main": "js/app.js",
  "dependencies": {
    "ejs": "^2.3.3",
    "express": "^4.13.3",
    "flux": "^2.0.1",
    "node-jsx": "^0.13.3",
    "react": "^0.12.0",
    "underscore": "^1.8.3",
    "watchify": "^3.3.1",
    "browserify": "^11.0.1",
    "envify": "^3.4.0",
    "gulp": "^3.9.0",
    "gulp-connect": "^2.2.0",
    "gulp-sass": "^2.0.4",
    "jest-cli": "^0.5.0",
    "reactify": "^1.1.1",
    "uglifyjs": "^2.4.10"
  },
  "scripts": {
    "start": "watchify -o static/js/bundle.js -v -d js/app.js",
    "build": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > js/bundle.min.js",
    "test": "jest"
  },
  "author": "Vijay Thangavel",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./js"
  }
